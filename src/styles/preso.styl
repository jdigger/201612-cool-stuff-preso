.smaller
    font-size: 0.7em;

ol.toc
    -moz-column-count: 2
    -moz-column-gap: 3em
    -webkit-column-count: 2
    -webkit-column-gap: 3em
    column-count: 2
    column-gap: 3em
    font-size: 1.5em

h2
    position: absolute
    top: 0px
    left: 0px
    text-align: center
    width: 100%

h2:only-child
    position: initial
    font-size: 2.5em
    text-shadow: 2px 2px #040
    color: #090

.fullheight img
    height: 720px;

.author
    visibility: hidden;

.center
    justify-content: center;

// p > code, li code
//     font-size: 1.0em

aside
    box-shadow: 0 0 6px black;
    font-size: 100%;
    line-height: 1.2em;
    padding: 10px;

    p
        text-align: left;
        margin-bottom: 0px;

td.hdlist1
    font-weight: bold;
    padding-left: 10px;
td.hdlist2
    padding: 5px;
    p
        background-color: #eee;
        padding-left: 10px;
        padding-right: 5px;
td p
    margin-bottom: 0px;
tr
    border-style: dashed;

figure.quote blockquote:before
    content: "\201c";
    float: left;
    font-size: 2.75em;
    font-weight: bold;
    line-height: 0.6em;
    margin-left: -0.6em;
    color: #7a2717;
    font-family: "Serif",serif;
    text-shadow: 0 1px 2px rgba(0,0,0,0.1);

span.source.bash
    font-family: monospace
    font-weight: bold
    background-color: black
    padding-left: 0.2em
    padding-right: 0.2em
    color: #9f9

section.git-merge-b1 > div
    -webkit-column-count: 2; /* Chrome, Safari, Opera */
    -moz-column-count: 2; /* Firefox */
    column-count: 2;

section.git-rebase-b1 > div
    -webkit-column-count: 2; /* Chrome, Safari, Opera */
    -moz-column-count: 2; /* Firefox */
    column-count: 2;

section.git-merge-b1 img
    height: 500px;

section.git-rebase-b1 img
    height: 500px;

ul.photo-attribution
    -webkit-column-count: 2; /* Chrome, Safari, Opera */
    -moz-column-count: 2; /* Firefox */
    column-count: 2;
    list-style-position: inside;
    font-size: 90%;

.bespoke-progress-parent
    position: fixed;
    height: 3px;
    bottom: 0px;
    left: 0;
    right: 0;
    z-index: 10;

.bespoke-progress-bar
    -webkit-transition: width .6s ease;
    -moz-transition: width .6s ease;
    -ms-transition: width .6s ease;
    -o-transition: width .6s ease;
    transition: width .6s ease;
    position: absolute;
    z-index: 1;
    height: 100%;
    background: #0089f3;

aside ul
    margin: 0

.dlist ul, .dlist p
    margin 0

pre.source
    overflow: inherit;

.revids
    font-size: 80%

codeblock(prc)
    &  > pre
        line-height: prc * 1.1
        background-color: black
        color: #9f9
        padding: 0.2em;
        code
            font-size: prc

.generic-codeblock
    codeblock(100%)
    aside
        font-size: 60%

.jhipster-generator
    codeblock(60%)
    aside
        font-size: 60%

.change-file1
    codeblock(80%)

.rename-files
    codeblock(77%)
    pre
        margin: 0

.git-filesystem
    codeblock(72%)
    aside p
        font-size: 60%

.pack-gc
    codeblock(95%)
    aside p
        font-size: 60%

figure.quote blockquote p
    box-shadow: 0 0 1px black;

div.em04
    font-size: 0.4em

div.em05
    font-size: 0.5em

div.em06
    font-size: 0.6em

div.em065
    font-size: 0.65em

div.em07
    font-size: 0.7em

div.em8, div.em08
    font-size: 0.8em

pre.source
    background-color: #333
    padding: .5em
    code.prettyprint
        font-weight: bold
        .tok-cm, .tok-s, .tok-s2
            color: #5f5 // light green
        .tok-nd, .tok-nl
            color: yellow
        .tok-mi
            color: lightblue
        .tok-n
            color: #f8f // light purple
        .tok-c1
            color: #aaa // light grey
        .tok-nc, .tok-o, .tok-na
            color: white
        .tok-kd, .tok-nf, .tok-k, .tok-kc, .tok-kt, .tok-kn
            color: orange
    code.prettyprint.language-bash
        color: white
